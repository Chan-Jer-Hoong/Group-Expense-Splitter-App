<LoginScreen>:
    name: "login"
    md_bg_color: "grey"

    MDBoxLayout:
        md_bg_color: "white"
        radius: 20
        size_hint: None, None
        size: 700, 900
        pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
        padding: [100,150,100,80]
        spacing: 40
        orientation: "vertical"

        MDLabel:
            text: "Log In"
            halign: "center"
            font_style: "Display"
            role: "medium"
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}

        MDTextField:
            id: email
            mode: "outlined"
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
            validator: "email"
            required: True
            adaptive_size: True
            
            MDTextFieldLeadingIcon:
                icon: "email"

            MDTextFieldHintText:
                text: "Email"
            
            MDTextFieldHelperText:
                text: "Fill in Email"
                mode: "on_error"
        
        MDTextField:
            id: password
            mode: "outlined"
            password: True
            pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
            required: True
            adaptive_size: True
            
            MDTextFieldLeadingIcon:
                icon: "eye-off"

            MDTextFieldHintText:
                text: "Password"
            
            MDTextFieldHelperText:
                text: "Fill in Password"
                mode: "on_error"
        
        # Log In Button Section
        MDBoxLayout:
            orientation: "horizontal"
            adaptive_height: True
            padding: [330,0,0,0]

            MDButton:
                style: "elevated"
                pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
                on_release: root.log_in_user()

                MDButtonText:
                    text: "Log In"

        # Sign Up Button Section
        MDBoxLayout:
            orientation: "horizontal"
            adaptive_size: True

            MDBoxLayout:
                orientation: "vertical"
                adaptive_size: True
                spacing: 30

                MDLabel:
                    text: "Don't have an account?"
                    adaptive_size: True
                    halign: "center"
                    pos_hint: {"center_x" : 0.5, "center_y" : 0.5}
                    font_size: 30

                MDButton:
                    style: "elevated"
                    pos_hint: {"center_x" : 0.3, "center_y" : 0.5}
                    on_release: app.root.current = "signup"

                    MDButtonText:
                        text: "<- Sign Up"
